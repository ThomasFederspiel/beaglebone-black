	{ PerEPWMSS2, &CT_HRPWM3 }
};

void enablePWMSSModule(const PwmssDeviceEnum pwmssDevice, const bool enable)
{
	if (enable)
	{
		enableModuleClock(pwmsRegisterBase[pwmssDevice].clk);
	}
	else
	{
		disableModuleClock(pwmsRegisterBase[pwmssDevice].clk);
	}
}

